<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".LectureAddSubject">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="688dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="343dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:text="Add Subject"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="88dp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="8dp"
        android:text="ADD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        android:layout_marginLeft="128dp" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="End at : "
            android:textSize="17dp" />

        <EditText
            android:id="@+id/end_hour"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:hint="Hour"
            android:inputType="number" />

        <EditText
            android:id="@+id/end_min"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:hint="Min"
            android:inputType="number" />

        <ToggleButton
            android:id="@+id/end_time_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="AM"
            android:textOn="PM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sub_name"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Start at : "
            android:textSize="17dp" />

        <EditText
            android:id="@+id/start_hour"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:hint="Hour"
            android:inputType="number" />

        <EditText
            android:id="@+id/start_min"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:hint="Min"
            android:inputType="number" />

        <ToggleButton
            android:id="@+id/start_time_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff="AM"
            android:textOn="PM" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sub_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:hint="Subject Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:layout_marginLeft="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which Day :"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">

            <CheckBox
                android:id="@+id/day_monday"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="MONDAY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/day_tuesday"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="TUESDAY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/day_wednesday"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="WEDNESDAY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/day_thursday"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="THURSDAY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/day_friday"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="FRIDAY" />
        </LinearLayout>

    </LinearLayout>


